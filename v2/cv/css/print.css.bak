div.header,ul.nav,p.topBtn,div.pane, a.viewResume, .bookList img, .album img, #top img,.pane dt img, hr, input.submit ,form span,#portfolioContent div.content > p,.bookList p, .bookList br, .topWarp h2, .topWarp p, ul.bookList h4
{display:none;}
a{color:#000;text-decoration:none;}
#favContent .bookList li a[href^=http]:after,.albumList a:after{content:attr(title)"　\00BB" attr(href);}
.articleList a[href^=http]:after{content:"　\00BB" attr(href);}
.topWarp p a[href^="/"]:before{content:"<　http://www.adriancheng.name" attr(href) "　>　";}


#aboutContent div.header{display:block;}


body{
	font-size:12px;
	font-family:Tohamo,Arial,helvetica, sans-serif;
	position:relative;
	}
em{font-style:normal;}
p em{
	font-size:14px;
	text-transform:uppercase;
	padding:0 0.3em;
}
h2{
	font-family:Georgia, Times, "Times New Roman", serif;
	font-size:36px;
	border-left:solid .2em #000;
	padding-left:30px;
	margin-bottom:-10px;
	clear:both;
	}
.header{
	padding-top:20px;
	background:#000;
	border-bottom:solid 20px #333;
	}
#portfolioContent,#contactContent, #aboutContent, #favContent{
	width:1003px;
	padding-bottom:20px;
	overflow:hidden;
}
ul.caseList{height:auto !important;}

#warpper{padding-top:410px;}
#portfolioContent{margin-bottom:-400px;}
#aboutContent{margin-top:-320px;padding-bottom:240px;}
#footer{padding-bottom:400px;margin-top:-10px;}
#top{margin-top:-20px;}
#contactContent{position:absolute;bottom:0; }
form{
		width:100%;
		margin:20px 20px 20px 0;
		float:left;
		}
fieldset{
		margin-right:20px;
		float:left;
}
label{
	padding:10px;
	display:block;
}
input{
	width:50%;
	border:none;
	border-bottom:solid 1px #000;
}
textarea{
	width:50%;
	height:14px;
	margin:-12px 0 0 100px;
	border:none;
	border-top:solid 1px #000;
}
#contactContent h3{display:none;}
#contactContent .content ul{
	width:100%
	display:block;
}
#contactContent .content li{
	width:50%;
	display:block;
	float:left;
}
ul.contactList li span{
	width:60px;
	text-align:right;
	display:inline-block;
}
.imgFloat{
	margin:0 10px 0 0;
	float:left;
}
ul.skillLevel li{
	font-size:14px;
	width:150px;
	float:left;
}
#favContent h3{margin-bottom:-10px;}
.bookList h4{font-weight:normal;height:12px}
.bookList li{}
.topWarp p{
	text-align:right;
	width:1003px;
	display:block;
		}
.topWarp p a{
	padding:0 5px;
}
#footer{
	width:1003px;
	border-bottom:solid 5px #000;
	text-align:right;
}