/*------------------------footer----------------------*/	
#footer{
	height:10px;
	margin:0 0 30px 0;
	border:solid 20px #428eda;
	border-width:10px 0 0;
	position:relative;
	}
	#footer blockquote{bottom:-11px;}
	#tagCloud h4{display:none;}
	ul.valid{margin:6px 0 0;}
		ul.valid li{
			padding:0 10px 0 25px;
			background:url(../images/bg-icon.gif) no-repeat left top;
			float:left;
			}
		ul.valid li.micro{
			padding-left:35px;
			background-position:left -14px;
			}
		ul.valid li.html{background-position:left -44px;}
		ul.valid li.css{background-position:left -69px;}
			ul.valid li a{text-decoration:underline;}